{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@ai16z/*": [
                "../packages/*/src"
            ]
        },
        "types": [
            "node",
            "jest"
        ],
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "../packages/core"
        },
        {
            "path": "../packages/adapter-sqlite"
        },
        {
            "path": "../packages/adapter-postgres"
        }
    ]
}